{
  "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "trailingComma": "none",
      "quoteStyle": "double"
    }
  },
  "vcs": {
    "useIgnoreFile": true,
    "enabled": true,
    "clientKind": "git"
  },
  "formatter": {
    "enabled": true,
    "indentSize": 2,
    "indentStyle": "space",
    "formatWithErrors": false,
    "lineWidth": 80,
    "ignore": ["*.json"]
  },
  "linter": {
    "enabled": true,
    "ignore": [".things"],
    "rules": {
      "suspicious": {
        "noRedeclare": "warn",
        "noExplicitAny": "warn"
      }
    }
  }
}
